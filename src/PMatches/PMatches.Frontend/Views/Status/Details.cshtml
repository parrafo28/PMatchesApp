@using PMatches.Frontend.Data.Entities
@model StatusViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Status</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10" id="name"></dd>

       
    </dl>
</div>

<div>
    <a href="#" onclick="history.back()" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadDetails(@Model.Id);
        });

        function loadDetails(id) {
                $.get(`https://localhost:7135/api/status/Get/${id}`, function (data) {
                $("#name").text(data.name); 
            });
        }
    </script>
}
