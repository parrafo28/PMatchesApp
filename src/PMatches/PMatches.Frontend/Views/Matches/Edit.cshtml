@model PMatches.Frontend.Models.Match

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EquipNameHome" class="control-label"></label>
                <input asp-for="EquipNameHome" class="form-control" />
                <span asp-validation-for="EquipNameHome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipNameVisitor" class="control-label"></label>
                <input asp-for="EquipNameVisitor" class="form-control" />
                <span asp-validation-for="EquipNameVisitor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WinHome" /> @Html.DisplayNameFor(model => model.WinHome)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PointsFromVisitor" class="control-label"></label>
                <input asp-for="PointsFromVisitor" class="form-control" />
                <span asp-validation-for="PointsFromVisitor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointsFromHome" class="control-label"></label>
                <input asp-for="PointsFromHome" class="form-control" />
                <span asp-validation-for="PointsFromHome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prize" class="control-label"></label>
                <input asp-for="Prize" class="form-control" />
                <span asp-validation-for="Prize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
