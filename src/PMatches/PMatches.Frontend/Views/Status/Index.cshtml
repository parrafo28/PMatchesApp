
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<div class="row mb-3">
    <div class="col-md-4">
        <input id="search" class="form-control" placeholder="Search..." onkeyup="loadStatus()" />
    </div>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
              Name
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody id="statusTable">
        
    </tbody>
</table>


@section Scripts {
    <script>

        $(document).ready(function () {
            loadStatus();
        });

        function loadStatus() {
            let filter = $("#search").val();

                $.get("https://localhost:7135/api/status/getall", { filter: filter }, function (data) {
                let rows = "";
                console.log(data);
                data.forEach(item => {
                    rows += `<tr>
                        <td>${item.name}</td> 
                        <td>
                            <a href="/Status/Details/${item.id}" class="btn btn-info btn-sm">Details</a>
                            <a href="/Status/Edit/${item.id}" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/Status/Delete/${item.id}" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>`;
                });
                $("#statusTable").html(rows);
            });
        }
    </script>
}

